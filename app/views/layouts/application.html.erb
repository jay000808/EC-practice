<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if end_user_signed_in? %>
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav class='nav navbar-nav navbar-left' >
            <span>NaganoCake</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "マイページ", end_user_path(current_user.id), class: "glyphicon glyphicon-home " %></li>
              <li><%= link_to "商品一覧" %></li>
              <li><%= link_to "カート"%></li>
              <li><%= link_to "ログアウト", destroy_end_user_session_path, :notice => "locked", class: "glyphicon glyphicon-log-out", method: :delete %></li>
            </ul>
          </nav>  
        </div>
      </header>
    <% else %>
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav class='nav navbar-nav navbar-left' >
            <span>NaganoCake</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "LOGO", root_path, class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to "商品一覧" %></li>
              <li><%= link_to "新規登録", new_end_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
              <li><%= link_to "ログイン", new_end_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
            </ul>
          </nav>
        </div>
      </header>
    <% end %>
    
    <main>
      <%= yield %>
    </main>
  </body>
</html>
